<Window x:Class="LightTextEditorPlus.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightTextEditorPlus.Demo"
        xmlns:textEditorPlus="clr-namespace:LightTextEditorPlus.TextEditorPlus;assembly=LightTextEditorPlus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <textEditorPlus:TextEditor HorizontalAlignment="Left" VerticalAlignment="Top" />

    <textEditorPlus:TextEditor
      Grid.Row="0" Grid.Column="1"
      Margin="10,10,10,10"
      HorizontalAlignment="Left"
      VerticalAlignment="Stretch" />

    <StackPanel
      Grid.Row="1" Grid.Column="0">
      <textEditorPlus:TextEditor />
    </StackPanel>

    <Canvas Grid.Row="1" Grid.Column="1">
      <textEditorPlus:TextEditor />
    </Canvas>
  </Grid>
</Window>